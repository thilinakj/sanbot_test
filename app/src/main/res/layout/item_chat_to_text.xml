<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/chat_to_text_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_chat_date_black"
        android:padding="4dp"
        android:text="2017-04-19"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />


    <com.qhcloud.demo.view.CircleImageView
        android:id="@+id/chat_to_text_avatar_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_to_text_date_tv"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:border_color="@color/colorTransparent"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/chat_to_text_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_to_text_date_tv"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/chat_to_text_avatar_iv"
        android:background="@drawable/chat_to_blue"
        android:gravity="center"
        android:maxWidth="240dp"
        android:text="12346521312321312312321321321321321321"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="36dp"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"/>

</RelativeLayout>